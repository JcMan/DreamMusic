<dream.app.com.dreammusic.ui.view.SlideMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:jc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/slidemenu"

    tools:context=".MainActivity">
    >
    <RelativeLayout
        android:layout_width="@dimen/d_slidemenu_width"
        android:layout_height="fill_parent">
        <include layout="@layout/slidemenu_content"/>
     </RelativeLayout>
    <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/ic_bg_main"
        >
        <include layout="@layout/top"/>
        <FrameLayout
            android:id="@+id/fragment_main"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
           <!-- <include layout="@layout/fragment_main" />-->
        </FrameLayout>
        <include layout="@layout/bottom" />
    </LinearLayout>
</dream.app.com.dreammusic.ui.view.SlideMenu>

