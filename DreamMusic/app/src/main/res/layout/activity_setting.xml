<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/top"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="@dimen/d_text_padding"
                style="@style/setting_item_layout"
                >
                <View
                   style="@style/split_line"
                   android:layout_alignParentTop="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_sss"
                    android:textColor="@color/color_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:text="摇一摇切歌"
                    />
                <dream.app.com.dreammusic.ui.view.SwitchButton
                    style="@style/setting_switchbutton"
                    />
                <View
                    style="@style/split_line"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                style="@style/setting_item_layout"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_sss"
                    android:textColor="@color/color_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:text="接收推送消息"
                    />
                <dream.app.com.dreammusic.ui.view.SwitchButton
                    style="@style/setting_switchbutton"
                    />
                <View
                    style="@style/split_line"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                style="@style/setting_item_layout"
                android:id="@+id/view_setting_about"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_sss"
                    android:textColor="@color/color_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:text="关于飞梦音乐"
                    />
                <ImageView
                    style="@style/array_right"
                    />
                <View
                    style="@style/split_line"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/view_setting_exit"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    style="@style/split_line"
                    />
                <Button
                    android:id="@+id/btn_setting_exit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="退出当前账号"
                    android:textColor="#f00000"
                    style="?android:attr/actionButtonStyle"
                    />
                <View
                    style="@style/split_line"
                    />
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
