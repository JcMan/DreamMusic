<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <dream.app.com.dreammusic.ui.view.LrcView
        android:layout_centerInParent="true"
        xmlns:lrc="http://schemas.android.com/apk/res/dream.app.com.dreammusic"
        android:id="@+id/play_second_lrc"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        lrc:textSize="15sp"
        lrc:normalTextColor="@android:color/white"
        lrc:currentTextColor="@color/color_current_lrc_text"
        lrc:dividerHeight="20dp"
        lrc:rows="9" />

</RelativeLayout>
