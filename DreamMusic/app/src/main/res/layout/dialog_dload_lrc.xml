<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_default_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/dialog_top"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/tv_dialog_lrc_title_label"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dark_gray"
            android:text="歌曲："
            />
        <EditText
            android:singleLine="true"
            android:layout_toRightOf="@+id/tv_dialog_lrc_title_label"
            android:layout_marginRight="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/tv_dialog_lrc_singer_label"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dark_gray"
            android:text="歌手："
            />
        <EditText
            android:layout_toRightOf="@+id/tv_dialog_lrc_singer_label"
            android:layout_marginRight="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        style="@style/SplitLine"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            style="?android:attr/actionButtonStyle"
            android:text="取消"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/color_gray"
            />
        <Button
            style="?android:attr/actionButtonStyle"
            android:text="下载"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
