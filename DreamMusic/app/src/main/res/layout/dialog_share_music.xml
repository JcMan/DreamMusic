<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/dialog_top" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/iv_dialog_share_singer"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/singer"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_toRightOf="@id/iv_dialog_share_singer"
            android:layout_centerVertical="true"
            android:id="@+id/tv_dialog_share_name"
            android:textColor="@color/color_dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="许嵩 - 幻听"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_size_ssss"
            android:padding="5dp"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_share_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_uid"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:hint="谈谈这首歌..."
        android:maxLength="65"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:textSize="14sp" />
    <View
        style="@style/SplitLine"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_dialog_share_cancel"
            android:layout_weight="1"
            style="?android:attr/actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            />
        <View
            style="@style/Dialog_Splitline_H"
            />
        <Button
            android:id="@+id/btn_dialog_share_ok"
            android:layout_weight="1"
            style="?android:attr/actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            />


    </LinearLayout>


</LinearLayout>
