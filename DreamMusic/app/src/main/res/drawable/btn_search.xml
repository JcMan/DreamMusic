<?xml version="1.0" encoding = "utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/color_main_layout_bg"
                android:centerColor="@color/color_main_layout_bg"
                android:endColor="@color/color_main_layout_bg"
                android:angle="270" />
            <corners
                android:radius="2dp"
                />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#aaffffff"
                android:centerColor="#aaffffff"
                android:endColor="#aaffffff"
                android:angle="270"
                />
            <corners
                android:radius="2dp"
                />
        </shape>
    </item>

</selector>