<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item 
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke 
                android:width="1.0px" 
                android:color="#CBCED2" />
            <gradient 
                android:angle="270.0" 
                android:endColor="#ffe8ecef" 
                android:startColor="#ffe8ecef" />
        </shape>
    </item>
    <item 
        android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient 
                android:angle="270.0" 
                android:endColor="#ffe8ecef" 
                android:startColor="#ffe8ecef" />
            <stroke 
                android:width="1.0px" 
                android:color="#CBCED2" />
        </shape>
        
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#0000" android:startColor="#0000" />

            <stroke android:width="1.0px" android:color="#CBCED2" />
        </shape>
        
     </item>

</selector>