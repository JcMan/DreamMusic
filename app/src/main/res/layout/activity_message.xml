<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/top" />
    <ListView
        android:id="@+id/listView_activity_message"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:layout_width="fill_parent"
        android:scrollbarStyle="outsideOverlay"
        android:cacheColorHint="#0000"
        android:layout_height="0dp">
    </ListView>
    <RelativeLayout
        android:background="#3a838383"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#aa515151"
            android:layout_alignParentTop="true"
            />
        <Button
            android:id="@+id/btn_send_activity_message"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="发送"
            android:background="@drawable/btn_download"
            style="?android:attr/actionButtonStyle"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            />
        <EditText
            android:id="@+id/edit_activity_message"
            android:layout_toLeftOf="@id/btn_send_activity_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_login_edit_normal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:layout_weight="1"
            />

    </RelativeLayout>

</LinearLayout>
