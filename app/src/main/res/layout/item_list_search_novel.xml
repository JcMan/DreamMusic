<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:paddingTop="5dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/tv_item_search_novel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绝世唐门"
        android:textColor="#D40000"
        />
    <TextView
        android:paddingTop="5dp"
        android:id="@+id/tv_item_search_novel_author"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="唐家三少"
        android:textColor="#5A7F13"
        />
    <TextView
        android:id="@+id/tv_item_search_novel_state"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/tv_item_search_novel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一千三百九十章：故人"
        />

</RelativeLayout>
