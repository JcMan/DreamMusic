<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/iv_item_list_novel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="3dp"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_novel_page_120"
            />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/iv_item_list_novel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/tv_item_novel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绝世唐门"
                android:textColor="#D40000"
                android:textSize="@dimen/text_size_sss"
                />
            <TextView
                android:id="@+id/tv_item_novel_author"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="唐家三少"
                android:textColor="#5A7F13"
                />
            <TextView
                android:id="@+id/tv_item_novel_introduction"
                android:paddingTop="3dp"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="@string/novel_introduction"
                android:layout_below="@+id/tv_item_novel_name"

                />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
