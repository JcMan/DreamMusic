<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/griditem_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_page_bookshelf"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_novel_page_120"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/tv_name_bookshelf"
        android:layout_below="@id/iv_page_bookshelf"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绝世唐门"
        android:textColor="#D40000"
        android:paddingBottom="5dp"
        />


</RelativeLayout>
